<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/leftProd"
        android:onClick="prevProduct"
        android:layout_alignTop="@+id/loc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:id="@+id/rightProd"
        android:onClick="nextProduct"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/upc"
        android:id="@+id/UPC"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/format"
        android:layout_toRightOf="@+id/leftProd"
        android:layout_toEndOf="@+id/leftProd" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/loc"
        android:id="@+id/loc"
        android:layout_alignTop="@+id/rightProd"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/format"
        android:id="@+id/format"
        android:textColor="@android:color/black"
        android:layout_below="@+id/desc"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/nbFacing"
        android:id="@+id/nbFacing"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/shelfHeight"
        android:layout_alignEnd="@+id/shelfHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/shelfHeight"
        android:id="@+id/shelfHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/desc"
        android:id="@+id/desc"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expiration"
        android:id="@+id/btnExpiration"
        android:layout_marginTop="47dp"
        android:onClick="setExpiration"
        android:layout_below="@+id/nbFacing"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutBarcode"
        android:layout_alignRight="@+id/UPC"
        android:layout_alignEnd="@+id/UPC"
        android:layout_below="@+id/UPC"
        android:layout_above="@+id/nbFacing"
        android:layout_alignLeft="@+id/UPC"
        android:layout_alignStart="@+id/UPC"></FrameLayout>

</RelativeLayout>
